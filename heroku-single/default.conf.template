server {
        listen       ${PORT} default_server;
        server_name  localhost;
        location / {
            try_files $uri @app;
        }
        location @app {
            include uwsgi_params;
            uwsgi_pass unix:///tmp/uwsgi.sock;
        }
        location /static {
            alias /app/static;
        }
        location = / {
            index /static/index.html;
        }
    }   